{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@content/*": [
        "./src/content/*"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@pages/*": [
        "./src/pages/*"
      ],
      "@lib/*": [
        "./src/lib/*.ts"
      ],
      "@lib/hooks": [
        "./src/lib/hooks/index"
      ],
      "@state/*": [
        "./src/state/*"
      ],
      "@theme": [
        "./src/theme/index"
      ],
      "@theme/*": [
        "./src/theme/*"
      ]
    },
  },
  "include": [
    "config/**/*.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/.stories/**/*.ts",
    "src/**/.stories/**/*.tsx",
    "scripts/**/*.ts",
    ".storybook/**/*.ts",
    ".storybook/**/*.tsx",
    "types/*.d.ts",
    "vite.config.ts"
  ],
  "exclude": [
    "scripts/github.ts",
    "scripts/medium.ts",
  ]
}