<section id="contact" class="contact-container container-block">
  <h2 class="container-block-title hidden section-title">Contact</h2>
  <dl class="list-unstyled contact-list">
    {{#if r.contact.email}}
    <dt class="hidden">Email</dt>
    <dd class="contact-info contact-info-email">
      <i class="fas fa-envelope contact-icon"></i>
      <a target="_blank" href="mailto:{{ RAW.contact.email }}">{{{ r.contact.email }}}</a>
    </dd>
    {{/if}}
    {{#if r.contact.phone}}
    <dt class="hidden">Phone</dt>
    <dd class="contact-info contact-info-phone"><i class="fas fa-phone contact-icon"></i>{{{ r.contact.phone }}}</dd>
    {{/if}}
    {{#if r.contact.website}}
    <dt class="hidden">Website</dt>
    <dd class="contact-info contact-info-website">
      <i class="fas fa-globe contact-icon" ></i>
      <a target="_blank" href="{{ RAW.contact.website }}">{{{ r.contact.website }}}</a>
    </dd>
    {{/if}}
    {{#if r.location}}
    <dt class="hidden">Location</dt>
    <dd class="contact-info contact-info-location">
      <i class="fas fa-globe-americas contact-icon" ></i>
      {{r.location.city}}, {{r.location.region}}, {{r.location.country}}
    </dd>
    {{/if}}
  </dl>
</section>
